@model ML.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="/css/Login.css">
</head>
<body>
    <center>
            <div class="row">
                <div class="col-md-6 mx-auto p-0">
                    <div class="card">
                        <div class="login-box">
                            <div class="login-snip">
                                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label>
                                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                               
                                <div class="login-space">
                                    
        @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
                                    <div class="login">
                                        <div class="group">
                                            <label for="user" class="label">Username</label>
                                            <input id="user" type="text" class="input" placeholder="Enter your username" name="UserName">
                                        </div>
                                        <div class="group">
                                            <label for="pass" class="label">Password</label>
                                            <input id="pass" type="password" class="input" data-type="password" placeholder="Enter your password" name="password1">
                                        </div>
                                        <div class="group">
                                            <input type="submit" class="button" value="Sign In">
                                        </div>
                                        <div class="hr"></div>
                                        <div class="foot">
                                            <a href="@Url.Action("CambiarPassword", "Usuario")">Forgot Password?</a>
                                        </div>
                                    </div>
         }
                                    <div class="sign-up-form">
          @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
             {                                   
                                        <div class="group">
                                            <input id="Nombre" type="text" class="input" placeholder="Nombre" name="Nombre">
                                        </div>
                                        <div class="group">
                                            <input id="AP" type="text" class="input" placeholder="Apellido Paterno" name="ApellidoPaterno">
                                        </div>
                                        <div class="group">
                                            <input id="AM" type="text" class="input" placeholder="Apellido Materno" name="ApellidoMaterno">
                                        </div>
                                        <div class="group">
                                            <input id="user" type="text" class="input" placeholder="username" name="UserName">
                                        </div>
                                        <div class="group">
                                            <input id="pass" type="password" class="input" data-type="password" placeholder="password" name="password1">
                                        </div>
                                        @*<div class="group">
                                            <input id="pass" type="password" class="input" data-type="password" placeholder="Repetir Password">
                                        </div>*@
                                        <div class="group">
                                            <input id="email" type="text" class="input" placeholder="Correo Electronico" name="Email">
                                        </div>
                                        <div class="group">
                                            <button type="submit" class="button" id="btnRegistrar">Registrar</button>
                                        </div>
                                        }
                                        <div class="hr"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </center>
</body>
</html>
